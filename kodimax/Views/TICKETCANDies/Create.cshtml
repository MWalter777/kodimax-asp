@model kodimax.Models.TICKETCANDY

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>TICKETCANDY</h4>
        @if (ViewBag.total != null)
        {
            <h1 class="alert alert-success">Total:  @ViewBag.total</h1>
            <h1 class="alert alert-success">Empleado:  @ViewBag.empleado</h1>
        }
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ID_CANDY, "ID_CANDY", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ID_CANDY", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID_CANDY, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Quantity</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PAY, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PAY, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

