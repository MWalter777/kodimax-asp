@model kodimax.Models.USUARIO

@{
    ViewBag.Title = "Editar usuario";
}

<div class="tile">
    <h2 class="text-center">Editar usuario</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>USUARIO</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID_USUARIO)
            @Html.HiddenFor(model => model.PASSWORD, new { htmlAttributes = new { @class = "form-control col-md-7" } })

            <div class="form-group">
                <div class="form-inline">
                    <label class="col-md-3">Rol</label>
                    @Html.DropDownList("ID_ROL", null, "Seleccione un rol", htmlAttributes: new { @class = "form-control col-md-7" })
                    @Html.ValidationMessageFor(model => model.ID_ROL, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="form-inline">
                    <label class="col-md-3">Email:</label>
                    @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control col-md-7" } })
                    @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" hidden="true">
                <div class="form-inline">
                    <label class="col-md-3">Username</label>
                    @Html.EditorFor(model => model.USERNAME, new { htmlAttributes = new { @class = "form-control col-md-7" } })
                    @Html.ValidationMessageFor(model => model.USERNAME, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="form-inline">
                    <label class="col-md-3">Habilitado</label>
                    @Html.EditorFor(model => model.HABILITADO, new { htmlAttributes = new { @class = "form-control col-md-7" } })
                    @Html.ValidationMessageFor(model => model.HABILITADO, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="form-inline">
                    <div class="col-md-8">
                    </div>
                    <input type="submit" value="Actualizar" class="btn btn-primary col-md-2" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Regresar", "Index")
    </div>

</div>