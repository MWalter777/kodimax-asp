
@{
    ViewBag.Title = "perfil";
}

<div class="tile">
    <h2>Mi perfil: @Session["username"] </h2>
    @if (ViewBag.error != null)
    {
        <h2 class="alert-danger">@ViewBag.error</h2>
    }
    @if (ViewBag.exito != null)
    {
        <h2 class="alert-success">@ViewBag.exito</h2>
    }
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <form class="form-horizontal">
                <div class="form-group row">
                    <label class="control-label col-md-3">Username</label>
                    <div class="col-md-9">
                        <input class="form-control col-md-8" name="username" type="text" placeholder="Username" required="" value="@ViewBag.usuario.USERNAME">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-md-3">Email</label>
                    <div class="col-md-9">
                        <input class="form-control col-md-8" name="email" type="email" placeholder="Ingrese su email" required="" value="@ViewBag.usuario.EMAIL">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-md-3">Password (Actual)</label>
                    <div class="col-md-9">
                        <input class="form-control col-md-8" name="password" type="password" maxlength="60" minlength="8" placeholder="Password" required="">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-md-3">Password (Nueva opcional)</label>
                    <div class="col-md-9">
                        <input class="form-control col-md-8" name="password2" type="password" maxlength="60" minlength="8" placeholder="Password">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Actualizar" class="btn btn-primary text-center" />
                    </div>
                </div>
            </form>
        }
</div>
